@section scripts{
    <script>
        $(document).ready(function () {
            $("#button").click(function () {
                var n={val:$("#sup").val()}
              //var num = $("#sup").val();
                $.ajax({
                    type:"post",
                    url: "/Home/about/",
                    data: { v: n },
                    success: function (data) {
                        $("#update").html("Result: " + data.result);

                    }

                });

            });

        });


    </script>
}